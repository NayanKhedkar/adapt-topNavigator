{
  "$anchor": "bookmarking-contentobject",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$patch": {
    "source": {
      "$ref": "contentobject"
    },
    "with": {
      "properties": {
        "_topNavigator": {
          "type": "object",
          "title": "Top Navigator",
          "default": {},
          "required": [
            "_isEnabled"
          ],
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enable Top Navigator",
              "description": "Navigate the page scroll to top",
              "default": true
            },
            "_graphic": {
              "type": "object",
              "title": "Graphic",
              "default": {},
              "required": [
                "src"
              ],
              "properties": {
                "src": {
                  "type": "string",
                  "isObjectId": true,
                  "title": "Arrow Image",
                  "description": "The arrow image",
                  "_backboneForms": {
                    "type": "Asset",
                    "media": "image"
                  }
                },
                "alt": {
                  "type": "string",
                  "title": "Alternative text",
                  "description": "A description of the image; required when it has meaning that must be conveyed to the learner. For 'decorative' images, leave this blank",
                  "default": "",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "attribution": {
                  "type": "string",
                  "title": "Attribution",
                  "description": "Text to be displayed as an attribution",
                  "default": "",
                  "_adapt": {
                    "translatable": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}